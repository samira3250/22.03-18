function isLeapYear(year) {
  const marchFirst = new Date(year, 2, 1); 
  const marchFirstTimestamp = marchFirst.valueOf();
  const februaryLast = new Date(year, 1, 28);
  const februaryLastTimestamp = februaryLast.valueOf();
  const differenceInDays = (marchFirstTimestamp - februaryLastTimestamp) / (1000 * 60 * 60 * 24);
  return differenceInDays > 1;
}
const year = 2025; 
const leap = isLeapYear(year);
console.log(`${year} год високосный? ${leap}`);
