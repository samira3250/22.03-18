function calculateAgeInDays(birthDateString) {
  const birthDateTimestamp = new Date(birthDateString).valueOf();
  const nowTimestamp = new Date().valueOf();
  if (isNaN(birthDateTimestamp)) {
    return "Неверный формат даты рождения. Используйте YYYY-MM-DD.";
  }
  const ageInMilliseconds = nowTimestamp - birthDateTimestamp;
  const ageInDays = Math.floor(ageInMilliseconds / (1000 * 60 * 60 * 24));
  return ageInDays;
}
const birthDate = "2007-05-24"; 
const ageInDays = calculateAgeInDays(birthDate);
console.log(`Возраст в днях: ${ageInDays}`);



