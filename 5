function toMoscowTime(timestamp) {
  let now = new Date(timestamp); 
  let moscowOffsetMilliseconds = 3 * 60 * 60 * 1000; 
  let localOffsetMinutes = now.getTimezoneOffset();
  let localOffsetMilliseconds = localOffsetMinutes * 60 * 1000;
  let moscowTimestamp = timestamp + localOffsetMilliseconds + moscowOffsetMilliseconds;
  let moscowDate = new Date(moscowTimestamp);
  return moscowDate;
}
function toInternationalTime(timestamp) {
    let now = new Date(timestamp);
    let moscowOffsetMilliseconds = 3 * 60 * 60 * 1000; 
    let localOffsetMinutes = now.getTimezoneOffset();
    let localOffsetMilliseconds = localOffsetMinutes * 60 * 1000;
    let internationalTimestamp = timestamp + localOffsetMilliseconds - moscowOffsetMilliseconds;
    let internationalDate = new Date(internationalTimestamp);
    return internationalDate;
}
let timestamp = new Date().valueOf(); 
let moscowTime = toMoscowTime(timestamp);
let internationalTime = toInternationalTime(timestamp);
console.log("Исходный Timestamp: " + timestamp);
console.log("Московское время: " + moscowTime.toLocaleString());
console.log("Международное время: " + internationalTime.toLocaleString());
